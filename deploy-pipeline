pipeline {
    agent any

    parameters {
        string(name: "App_Name", description: "Provide the application name")
        string(name: "App_Version", description: "Provide the application version")
    }

    environment {
        // Path to Jenkins user's kubeconfig
        KUBECONFIG = "/home/jenkins/.kube/config"
    }

    stages {
        stage("Checkout CD Repo") {
            steps {
                echo "Cloning CD repository..."
                git branch: 'main', url: 'https://github.com/abhishekdhaiskar/Kubernetes-ArgoCD.git'
            }
        }

        stage("Deploy to Kubernetes") {
            steps {
                withEnv(["KUBECONFIG=${env.KUBECONFIG}"]) {
                    sh """
                        echo "Deploying ${params.App_Name} version ${params.App_Version}..."

                        # Apply deployment manifest from workspace
                        kubectl apply -f ${WORKSPACE}/datastore-deploy/datastore-deploy.yaml --validate=false

                        # Wait and show pods status
                        echo "Waiting 10 seconds for pods to start..."
                        sleep 10
                        kubectl get pods -o wide
                    """
                }
            }
        }
    }

    post {
        success {
            echo "✅ Deployment completed successfully."
        }

        failure {
            echo "❌ Deployment failed. Check logs for details."
        }

        always {
            echo "ℹ️ CD pipeline finished."
        }
    }
}
