pipeline {
    agent any

    parameters {
        string(name: "App_Name", description: "Provide the application name")
        string(name: "App_Version", description: "Provide the application version")
    }

    environment {
        KUBECONFIG = "/home/jenkins/.kube/config"
    }

    stages {
        stage("Checkout CD Repo") {
            steps {
                echo "Cloning CD repository..."
                git branch: 'main', url: 'https://github.com/abhishekdhaiskar/Kubernetes-ArgoCD.git'
            }
        }

   stage("Deploy to Kubernetes") {
      steps {
         withEnv(["KUBECONFIG=/home/jenkins/.kube/config"]) {
            sh """
                # Apply deployment using absolute path
                kubectl apply -f /var/lib/jenkins/workspace/DataStore/datastore-deploy/datastore-deploy.yaml --validate=false

                # Optional: check pods
                kubectl get pods -o wide
            """
        }
    }
}

    }

    post {
        success {
            echo "✅ Deployment completed successfully."
        }

        failure {
            echo "❌ Deployment failed. Check logs for details."
        }

        always {
            echo "ℹ️ CD pipeline finished."
        }
    }
}
