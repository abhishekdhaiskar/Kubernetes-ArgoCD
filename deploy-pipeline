pipeline {
    agent any

    parameters {
        string(name: "App_Name")
        string(name: "App_Version")
    }

    stages {
        stage("Checkout CD Repo") {
            steps {
                git branch: 'main', url: 'https://github.com/abhishekdhaiskar/Kubernetes-ArgoCD.git'
            }
        }

        stage("Deploy to Kubernetes") {
            steps {
                echo "Deploying ${params.App_Name} version ${params.App_Version}"

                sh """
                    kubectl apply -f datastore-deploy/datastore-deploy.yaml
                """
            }
        }
    }
}
